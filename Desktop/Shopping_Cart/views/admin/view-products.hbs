<section>
  <div class="admin-page-content">
    <div class="container">
      <div class="row mt-4 p-3">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
      </div>
      <table class="table table-striped table-bordered mt-3" id="productsTable">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Option</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <td>{{@index}}</td>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td><img style="width: 60px;height: 60px;" src="/product-images/{{this._id}}.jpg" alt=""></td>

            <td>
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete?')">Delete</a>

          </tr>
          {{/each}}

          <!-- Add more rows for additional orders -->
        </tbody>
      </table>
    </div>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#productsTable').DataTable();
  });
</script>