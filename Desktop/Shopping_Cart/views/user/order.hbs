<section>
    <div class="section-container">
        <div class="container">
            <h2>My Orders</h2>
            <hr class="line">
            {{#each order}}
            <div class="order-item">
                <div class="order-info">

                    <div class="product-details">
                        <p class="product-name">Delivered on {{deliveryDetails.deliveredDate}}</p>
                        <p class="products-item">Products: {{this.products.length}}</p>
                        <p class="products-item">Order : {{this.status}}</p>
                    </div>

                    <div class="arrow">
                        <a href="/order-product-view/{{_id}}" class="btn btn-success">View</a>
                    </div>
                </div>
            </div>
            <hr class="line">
            {{/each}}
        </div>
    </div>
</section>
<style>
    .section-container {

        display: flex;
        justify-content: center;
        align-items: center;
        padding: 4rem;
        background-color: #f4f4f4;
        font-family: Arial, sans-serif;
    }

    .container {
        width: 70%;
        background-color: #f4f4f4;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
        padding: 20px;
        color: black;
        text-align: center;
    }

    .line {
        border: none;
        border-top: 1px solid black;
        margin: 10px 0;
    }

    .order-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        height: 9rem;
    }

    .order-info {
        display: flex;
        align-items: center;
    }

    .order-thumbnail img {
        width: 100px;
        height: 100px;
        margin-left: 2rem;
    }

    .product-details {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-left: 10rem;
    }

    .product-name {
        font-weight: bold;

    }

    .products-item {
        font-weight: bold;
        margin-left: 6rem;
    }

    .arrow {
        font-size: 20px;
        cursor: pointer;
        margin-left: 10rem;
        margin-right: 10rem;
    }

    .order-details {
        display: none;
        width: 100%;
        padding: 10px;
        background-color: #fff;
        color: #333;
    }

