<section>
  <div class="container">
    <h1 class="p-3" style="text-align: center; color: darkblue;">Enter Delivery Details</h1>
    <form action="" id="checkout-form">
      <div style="display: flex;">
        <!-- Left side - Address, Pincode, and Mobile -->
        <div style="flex: 1; margin-right: 20px;">
          <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <textarea class="form-control" id="address" name="address" required></textarea>
          </div>
          <div class="mb-3">
            <label for="pincode" class="form-label">Pincode</label>
            <input type="text" class="form-control" id="pincode" name="pincode" required>
          </div>
          <div class="mb-3">
            <label for="mobile" class="form-label">Mobile Number</label>
            <input type="tel" class="form-control" id="mobile" name="mobile" required>
            <input type="text" name="userId" id="" value="{{user._id}}" hidden>
          </div>
        </div>

        <!-- Right side - Total Amount and Payment Method -->
        <div style="flex: 1;">
          <div style="border: 2px solid #ccc; padding: 20px; width: 400px; margin-left: 100px; margin-top: 1.5rem;">
            <h3 style="text-align: center; font-weight: bold;">Total Amount: Rs.{{total}}</h3>
            <div style="margin-top: 50px;"></div> <!-- Extra space between the form and the box -->
            <div class="mb-3">
              <p>Payment method</p>
              <div style="display: flex; justify-content: space-between;">
                <div>
                  <input type="radio" id="cod" name="payment-method" value="cod">
                  <label for="cod">Cash on Delivery</label>
                </div>
                <div>
                  <input type="radio" id="online" name="payment-method" value="online">
                  <label for="online">Online Payment</label>
                </div>
              </div>
            </div>
            <div style="text-align: center; margin-top: 30px;">
              <button type="submit" class="btn btn-success">Checkout</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>
<script>
  $("#checkout-form").submit((e) => {
    e.preventDefault()
    $.ajax({
      url: '/place-order',
      method: 'post',
      data: $('#checkout-form').serialize(),
      success: (response) => {
        location.href = "/order-summery";
      }
    })
  })
</script>